<head>
    <title>Weekly data</title>
    <script src="javascript/jquery-3.6.0.min.js"></script>
    <script src="chart/chart.min.js"></script>
    <script src="bootstrap/js/bootstrap.min.js"></script>
    <script src="https://static.coinstats.app/widgets/coin-chart-widget.js"></script>
    <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/styles.css">
</head>
<script>
    const options = {
        legend: {
            display: false
        },
        elements: {
            line: {
                tension: 0
            }
        },
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true,
                    min: 0,
                    display: false
                }
            }],
        }
    }

    const displayChart = (data, chartId) => {
        const elem = `<div class="col-sm-4">
                            <div class="row box">
                                <span class="title"> ${data.coin}</span>
                                <hr/>
                                <canvas id="${chartId}-price"></canvas>
                                <coin-stats-chart-widget type="medium" coin-id="${data.coin}" width="2000" chart-height="250" currency="USD" locale="en" bg-color="#FFFFFF" text-color="#1C1B1B" status-up-color="#4F8A5B" status-down-color="#FE4747" buttons-color="#FFFFFF" chart-color="#E47103" chart-gradient-from="#FFFFFF" chart-gradient-to="#EFEFEF" chart-label-background="#FFFFFF" candle-grids-color="rgba(0,0,0,0.1)" border-color="rgba(28,27,27,0.15)" style="max-width: 2000px; width: 100%;" ></coin-stats-chart-widget>
                            </div>
                     </div>` 


        $(".mainRow").append(elem);
        var ctx = document.getElementById(`${chartId}-price`).getContext('2d');

        var chartPrice = new Chart(ctx, {
            type: 'line',
            data: {
                labels: data.timeStamp,
                datasets: [{
                    label: `Weekly price`,
                    data: data.coinPrice,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                    ],
                    borderWidth: 1
                }]
            },
            options
        });
    }
</script>
